{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "newLine": "lf",
    "sourceMap": true,
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "vite-plugin-pwa/client"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"]
  },
  "include": ["./src/**/*", "vite.config.js", "./scripts", "src/types.d.ts"],
  "exclude": ["node_modules/", "Markdown.tsx"]
}
